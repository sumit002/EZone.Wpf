<UserControl x:Class="ElectronicZone.Wpf.View.Common.PieChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectronicZone.Wpf.View.Common"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d">
    <Grid>
        <lvc:PieChart Name="pieChart" LegendLocation="Bottom" Width="300" Height="250"
                      Series="{Binding Series}">
        </lvc:PieChart>
        <!--<lvc:PieChart Grid.Row="6" Grid.Column="0" Name="pieChart" LegendLocation="Bottom"
                      Series="{Binding  Path=Series}">
        </lvc:PieChart>-->
    </Grid>
</UserControl>
